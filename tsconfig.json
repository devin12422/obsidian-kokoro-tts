{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": [
		"dom",
		"scripthost",
		"es2020",
    	"ES5",
     	"ES6",
    	"ES7"
    ],
	"allowSyntheticDefaultImports": true

  },
  "include": [
    "**/*.ts"
  ]
}
